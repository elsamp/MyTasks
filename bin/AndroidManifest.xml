<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allBadCats.utils.mytasks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.allBadCats.utils.mytasks.WeekViewMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.allBadCats.utils.mytasks.ManageGroupsActivity"
            android:label="@string/actvity_groups"
            android:parentActivityName="com.allBadCats.utils.mytasks.WeekViewMain" >
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.example.myfirstapp.MainActivity" />
        </activity>
    </application>

</manifest>
